{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location":{
      "type": "string",
      "allowedValues": [
        "East US",
        "West US",
        "West Europe",
        "North Europe",
        "East Asia",
        "South East Asia"
      ],
      "metadata": {
        "description": "Deployment location"
      }
    }
  },
  "variables": {
    "sharedTemplateUri":"https://raw.githubusercontent.com/kasmihmed/phme-azure-template/master/shared-template.json",
    "websTemplateUri":"https://raw.githubusercontent.com/kasmihmed/phme-azure-template/master/webs-template.json",
    "databaseTemplateUri":"",
    "elasticsearchTemplateUri":"",
    "workerTemplateUri":""

  },
  "resources":[
    {"name":"shared",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('sharedTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"webs",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":["Microsoft.Resources/deployments/shared"],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('websTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        },
        "parameters":{
          "resourceLocation":{
            "value":"[parameters('location')]"
          },
          "vmssName":{
            "value":"testwebss"
          },
          "instanceCount":{
            "value":2
          }
          }
         }
      }



  ]
   }