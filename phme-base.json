{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "sharedTemplateUri":"",
    "websTemplateUri":"",
    "databaseTemplateUri":"",
    "elasticsearchTemplateUri":"",
    "workerTemplateUri":""

  },
  "resources":[
    {"name":"shared",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('sharedTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"Webs",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":[
        "Microsoft.Resources/deployments/shared"
      ],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('websTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"database",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":[
        "Microsoft.Resources/deployments/shared"
      ],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('databaseTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"elasticsearch",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":[
        "Microsoft.Resources/deployments/shared"
      ],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('elasticsearchTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"worker",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":[
        "Microsoft.Resources/deployments/shared"
      ],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('workerTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    }

  ]
}